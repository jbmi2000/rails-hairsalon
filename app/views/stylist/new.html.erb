<h3>Welcome New Stylist</h3>
<h7>Please Create your account

<%= form_for :stylists do |f| %>

    <% if @stylist.errors.any? %>
     <p>There were errors: <%= @stylist.errors.full_messages.join(" | ") %></p>
    <% end %>

    <br>
    <%= f.label :name %> 
    <%= f.text_field :name %>
  
    <br>
  
    <%= f.label :email %>  
    <%= f.email_field :email, placeholder: "This will be your username" %>
    <br>
  
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
  
    <%= f.submit "Sign Up" %> <br><br>
    <p>Already one of our Stylists?  Please login</p> 
    <%= button_to("Log In",  login_path, method: :get) %>
  
  <% end %>
  </h7>
