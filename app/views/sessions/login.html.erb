<h1>Welcome to The 1 Salon Stylist Client Manager</h1><br>
Please sign in: <br><br>
<%= form_with model: @stylist, url: login_path do |f| %>
    <%= f.label "email" %>
    <%= f.email_field :email %>

    <%= f.label "password" %>
    <%= f.password_field :password %>

    <%= f.submit "Login" %>

 <% if @stylist.errors.any? %>
    <p>There were errors:</p>
    <p><%= @stylist.errors.full_messages.join(" | ") %></p>
  <% end %>
<% end %>